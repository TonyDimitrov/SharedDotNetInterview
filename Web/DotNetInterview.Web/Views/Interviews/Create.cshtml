@model CreateInterviewVM
@using DotNetInterview.Web.ViewModels.Enums;

@{
    ViewData["Title"] = "Create";
}

@section Styles {
    <link href="@Url.Content("~/css/create-interview.css")" rel="stylesheet" type="text/css" />
}

<h4>SHARE INTERVIEW</h4>

<div class="row">
    <div class="col-md-10">
        <form asp-controller="Interviews" asp-action="Create" method="post" enctype="multipart/form-data">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Seniority" class="control-label required"></label>
                <select asp-for="Seniority" class="form-control" asp-items="Html.GetEnumSelectList<PositionSeniorityVM>()">
                </select>
                <span asp-validation-for="Seniority" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PositionTitle" class="control-label required"></label>
                <input asp-for="PositionTitle" class="form-control" />
                <span asp-validation-for="PositionTitle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PositionDescription" class="control-label"></label>
                <input asp-for="PositionDescription" class="form-control" />
                <span asp-validation-for="PositionDescription" class="text-danger"></span>
            </div>

            <div class="form-group inner-form">
                <p>Position location</p>
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input btn-radio" id="office-type" name="locationType" value="InOffice">
                    <label class="form-check-label" for="office-type">In office</label>
                </div>
                <div class="form-check form-check-inline">
                    <input type="radio" class="form-check-input btn-radio" name="locationType" value="Remote" checked>
                    <label class="form-check-label" for="materialInline2">Remote</label>
                </div>
            </div>

            <div class="form-group" id="div-location" hidden>
                <label asp-for="InterviewLocation" class="control-label required"></label>
                <input asp-for="InterviewLocation" class="form-control" />
                <span asp-validation-for="InterviewLocation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CompanyNationality" class="control-label required"></label>
                <select asp-for="CompanyNationality" class="form-control">
                    @foreach (var nationality in Model.Select.Nationality)
                    {
                        <option name="CompanyNationality" value="@nationality" selected>@nationality</option>
                    }
                </select>
                <span asp-validation-for="CompanyNationality" class="text-danger"></span>

            </div>

            <div class="form-group">
                <label asp-for="Employees" class="control-label required">Company size</label>
                <select asp-for="Employees" class="form-control" asp-items="Html.GetEnumSelectList<EmployeesSizeVM>()">
                </select>
            </div>

            <div class="inner-form">
                <h4>Add interview questions information</h4>
                <div class="question">
                    <div class="form-group question-group" data-index="0" data-number="1">
                        <div class="div-textarea">
                            <label asp-for="Questions" class="control-label inner-label required">1. Question - interview must have at least one question</label>
                            <textarea asp-for="Questions[0].Content" rows="2" cols="50" class="form-control"></textarea>
                            <span asp-validation-for="Questions[0].Content" class="text-danger"></span>
                        </div>
                        <div>
                            <div class="form-check form-check-inline">
                                <p>You can rank this question as most:</p>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input interesting" type="checkbox" name="Questions[0].Interesting" value="1">
                                <label class="form-check-label" for="inlineCheckbox1">interesting</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input unexpected" type="checkbox" name="Questions[0].Unexpected" value="2">
                                <label class="form-check-label" for="inlineCheckbox2">unexpected</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input difficult" type="checkbox" name="Questions[0].Difficult" value="3">
                                <label class="form-check-label" for="inlineCheckbox3">difficult</label>
                            </div>
                        </div>
                    </div>
                    <div class="btn-toolbar" role="toolbar" aria-label="Toolbar with button groups">
                        <div class="btn-group mr-2 btn-answer" role="group" aria-label="First group">
                            <button type="button" data-add="true" class="btn btn-sm btn-secondary">Add answer</button>
                        </div>

                        <div class="btn-group">
                            <input class="input-file file" type="file" id="FileUpload_FormFile" name="Questions[0].formFile">
                        </div>

                    </div>
                </div>
                <div id="btn-question" class="btn-group" role="group" aria-label="Third group">
                    <button type="button" class="btn btn-md btn-secondary button-question">Add question</button>
                </div>
            </div>

            <div class="form-group button-question">
                <input type="submit" value="Create Interview" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<environment names="Development">
    <script src="~/js/create-interview.js" asp-append-version="true"></script>
</environment>
<environment names="Production, Deploy">
    <script src="~/js/create-interview.js" asp-append-version="true"></script>
</environment>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
