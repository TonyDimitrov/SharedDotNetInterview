                        <div class="col-1 div-small-fond">@i.ModifiedOn</div>
                        <div class="col-1 div-small-fond" hidden="@i.HideRanked"><img class="img-glifi" src="~/uploads/imageFiles/star.png" /> @i.Ranked</div>
                        <div class="col-1 div-small-fond" hidden="@i.HideFile">
                            <a class="a-user-link" href="/uploads/taskFiles/@i.File" download>
                                Download file
                            </a>
                        </div>
                    </div>

                    <div class="row justify-content-center div-row div-r-bb" hidden="@i.HideAnswer">
                        <div class="col-12">@counter. Ans: @i.Answer</div>
                    </div>

                    <div class="row justify-content-center div-row">

