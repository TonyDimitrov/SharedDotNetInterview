@model DotNetInterview.Web.ViewModels.Interviews.AllInterviewsVM

@{
    ViewData["Title"] = "All";
}

@section Styles {
    <link href="@Url.Content("~/css/all-interviews.css")" rel="stylesheet" type="text/css" />
}

<h1 class="text-center h-title">Interviews</h1>

<div class="row div-row-header">
    <div class="col-3">Position title</div>
    <div class="col-2">Seniority</div>
    <div class="col-1">Qns</div>
    <div class="col-2">Date</div>
    <div class="col-1">Likes</div>
    <div class="col-2">Shared by</div>
    <div class="col-1">Check it</div>
</div>

@foreach (var i in Model.Interviews)
{
    <div class="row div-row div-r-bb">
        <div class="col-3">@i.PositionTitle</div>
        <div class="col-2">@i.Seniority</div>
        <div class="col-1"><span class="badge badge-pill span-questions">@i.Questions</span></div>
        <div class="col-2">@i.Date</div>
        <div class="col-1"><span class="badge badge-pill span-questions">@i.Likes</span></div>
        <div class="col-2">
            <a class="a-user @i.DisableUserLink" asp-controller="Users" asp-action="Details" asp-route-userId="@i.CreatorId">
                @i.CreatorName

            </a>
            <div class="circular-portrait">
                <img src="/Users/UserAvatar?imageName=@i.CreatorAvatar">
            </div>
        </div>
        <div class="col-1">
            <a class="btn btn-sm btn-info btn-details" asp-controller="Interviews" asp-action="Details" asp-route-interviewId="@i.InterviewId">Details</a>
        </div>
    </div>
}
<div class="row justify-content-md-center">
    <div class="col-2">
        <nav aria-label="Page navigation example">
            <ul class="pagination">
                <li class="page-item">
                    <a class="page-link @Model.PrevtDisable" asp-area="" asp-controller="Interviews"
                       asp-action="All" asp-route-seniority="@Model.Seniority" asp-route-page="@Model.StartrIndex" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                    </a>
                </li>
                @for (int setNumber = Model.StartrIndex + 1; setNumber <= Model.StartrIndex + Model.PaginationLength; setNumber++)
                {
                    <li class="page-item">
                        <a class="page-link @(setNumber == Model.CurrentPage ? "mark-box" : string.Empty)" asp-area=""
                           asp-controller="Interviews" asp-action="All" asp-route-seniority="@Model.Seniority" asp-route-page="@setNumber">@setNumber</a>
                    </li>
                }
                <li class="page-item">
                    <a class="page-link @Model.NextDisable" asp-area="" asp-controller="Interviews"
                       asp-action="All" asp-route-seniority="@Model.Seniority" asp-route-page="@(Model.StartrIndex + Model.PaginationLength + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</div>

