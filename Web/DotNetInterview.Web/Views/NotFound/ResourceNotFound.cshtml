@model NotFoundErrorVM
@{
    ViewData["Title"] = "Resource not found";
}
@section Styles {
    <link href="@Url.Content("~/css/error.css")" rel="stylesheet" type="text/css" />
}

<div class="justify-content-center main-font-style">

    <div class="warning-border">
        <h1 class="heading-font heading-color-warning">Resource not found</h1>

        <h2 class="sub-heading-font">@Model.Message</h2>

        @if (Model.RequestUrl != null)
        {
            <p>Url: @Model.RequestUrl</p>
        }

        @if (Model.StatusCode != 0)
        {
            <p>Status code: @Model.StatusCode</p>
        }

        @if (this.Model.ShowRequestId)
        {
            <p>
                Request Id: <code>@this.Model.RequestId</code>
            </p>
        }
    </div>
</div>
